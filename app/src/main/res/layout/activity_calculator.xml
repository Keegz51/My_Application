<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator">

    <Button
        android:id="@+id/btn_7"
        android:text="7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="300dp"
        android:layout_marginRight="300dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_4"
        app:layout_constraintTop_toBottomOf="@id/btn_7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="4"
        android:layout_marginTop="5dp"
        android:layout_marginRight="300dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_1"
        app:layout_constraintTop_toBottomOf="@id/btn_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="300dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_8"
        android:text="8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_7"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="300dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_5"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@id/btn_4"
        app:layout_constraintTop_toBottomOf="@id/btn_8"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_2"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@id/btn_1"
        app:layout_constraintTop_toBottomOf="@id/btn_5"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_9"
        android:text="9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_6"
        app:layout_constraintTop_toBottomOf="@id/btn_9"
        app:layout_constraintLeft_toRightOf="@id/btn_5"
        android:text="6"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_3"
        app:layout_constraintTop_toBottomOf="@id/btn_6"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@id/btn_2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_0"
        app:layout_constraintTop_toBottomOf="@id/btn_2"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@id/btn_1"
        app:layout_constraintRight_toLeftOf="@id/btn_3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_equals"
        app:layout_constraintTop_toBottomOf="@id/btn_3"
        android:text="="
        app:layout_constraintLeft_toRightOf="@id/btn_3"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="75dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_plus"
        android:text="+"
        app:layout_constraintLeft_toRightOf="@id/btn_3"
        app:layout_constraintBottom_toTopOf="@id/btn_equals"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="75dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_minus"
        android:text="-"
        app:layout_constraintLeft_toRightOf="@id/btn_6"
        app:layout_constraintBottom_toTopOf="@id/btn_plus"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="75dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_multiply"
        android:text="x"
        app:layout_constraintLeft_toRightOf="@id/btn_9"
        app:layout_constraintBottom_toTopOf="@id/btn_minus"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="75dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_divide"
        android:text="÷"
        app:layout_constraintLeft_toRightOf="@id/btn_9"
        app:layout_constraintBottom_toTopOf="@id/btn_multiply"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="75dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_sqrt"
        android:text="√"
        app:layout_constraintRight_toLeftOf="@id/btn_divide"
        app:layout_constraintBottom_toTopOf="@id/btn_9"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_square"
        android:text="x²"
        app:layout_constraintRight_toLeftOf="@id/btn_sqrt"
        app:layout_constraintBottom_toTopOf="@id/btn_8"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_1overX"
        android:text="1/x"
        app:layout_constraintRight_toLeftOf="@id/btn_square"
        app:layout_constraintBottom_toTopOf="@id/btn_7"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>